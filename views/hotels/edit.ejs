<%- include ('../partials/header') %>

<div class="container">
       <h1 id="addcenter">Edit <%=hotels.title%></h1>
       <div id="arrange">
           <form action="/hotels/<%=hotels._id%>?_method=PUT" method="POST">
               <div class="form-group">
                    <input class="form-control" type="text" name="hotels[title]" value="<%=hotels.title%>">
               </div>
               <div class="form-group">
                   <input class="form-control" type="text" name="hotels[image]" value="<%=hotels.image%>">
               </div>
               <div class="form-group">
                   <input class="form-control" type="text" name="hotels[image2]" value="<%=hotels.image2%>">
               </div>
               <div class="form-group">
                   <input class="form-control" type="text" name="hotels[image3]" value="<%=hotels.image3%>">
               </div>
               <div class="form-group">
                   <input class="form-control" type="text" name="hotels[image4]" value="<%=hotels.image4%>">
               </div>
               <div class="form-group">
                   <textarea class="form-control" row="5" cols="30" name="hotels[description]"><%=hotels.description%></textarea>
               </div>
               <div class="form-group">
                   <input type="text" class="form-control" name="hotels[price]" value="<%=hotels.price%>">
               </div>
               <div class="form-group">
                   <input type="text" class="form-control" name="hotels[location]" value="<%=hotels.location%>">
               </div>
               <div class="form-group">
                   <input type="text" class="form-control" name="hotels[coordinates]" value="<%=hotels.coordinates%>">
               </div>
               <div class="form-group">
                   <button class="btn btn-primary btn-lg">submit</button>
               </div>
            </form>
       </div>
</div>





<%- include ('../partials/footer') %>