<%- include ('../partials/header') %>

<div class="container">
       <h1 id="addcenter">Add Hotels</h1>
       <div id="arrange">
           <form action="/hotels" method="POST">
               <div class="form-group">
                    <input class="form-control" type="text" name="hotels[title]" placeholder="hotel">
               </div>
               <div class="form-group">
                   <input class="form-control" type="text" name="hotels[image]" placeholder="image">
               </div>
               <div class="form-group">
                   <input class="form-control" type="text" name="hotels[image2]" placeholder="image2">
               </div>
               <div class="form-group">
                   <input class="form-control" type="text" name="hotels[image3]" placeholder="image3">
               </div>
               <div class="form-group">
                   <input class="form-control" type="text" name="hotels[image4]" placeholder="image4">
               </div>
               <div class="form-group">
                   <textarea class="form-control" row="5" cols="30" name="ho2tels[description]" placeholder="description"></textarea>
               </div>
               <div class="form-group">
                   <input type="text" class="form-control" name="hotels[price]" placeholder="price">
               </div>
               <div class="form-group">
                   <input type="text" class="form-control" name="hotels[location]" placeholder="location">
               </div>
               <div class="form-group">
                   <input type="text" class="form-control" name="hotels[coordinates]" placeholder="coordinates">
               </div>
               <div class="form-group">
                   <button class="btn btn-primary btn-lg">submit</button>
               </div>
            </form>
       </div>
</div>





<%- include ('../partials/footer') %>